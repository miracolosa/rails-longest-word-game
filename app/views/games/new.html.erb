<div class="container">
  <h1 class="my-5 text-center">New Game</h1>
  <%# <div class="letters d-flex justify-content-center"> %>
  <ul class="list-inline text-center">
    <% @letters.each do |letter| %>
      <li class="letter list-inline-item text-center"><%= letter %></li>
    <% end %>
  </ul>
  <%# </div> %>

  <div class="d-flex flex-column align-items-center">
  <p class="mt-5">What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <div class="mb-3 input-group">
      <input type="text" name="suggestion" class="form-control">
      <button type="submit" class="btn btn-outline-primary">Play</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
  </form>
  </div>
</div>
